# Create: ansible/roles/ui-server/templates/nginx.conf.j2

server {
    listen 80;
    server_name {{ ui_subdomain }}.{{ domain_base }};
    root /var/www/optima/public;
    index index.php index.html index.htm;

    # PHP Configuration
    client_max_body_size {{ php_upload_max_filesize }};

    # Laravel URL rewriting
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # PHP-FPM Configuration
    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php{{ php_version }}-fpm.sock;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
        
        # PHP performance settings
        fastcgi_read_timeout {{ php_max_execution_time }};
        fastcgi_buffer_size 128k;
        fastcgi_buffers 256 16k;
        fastcgi_busy_buffers_size 256k;
        fastcgi_temp_file_write_size 256k;
    }

    # Static files caching
    location ~* \.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, no-transform";
        access_log off;
    }

    # Security configurations
    location ~ /\.ht {
        deny all;
    }
    
    location ~ /\.env {
        deny all;
    }
    
    location ~ /\.git {
        deny all;
    }

    location /storage {
        deny all;
    }

    # Laravel specific security
    location ~ ^/(app|bootstrap|config|database|resources|routes|tests|vendor) {
        deny all;
    }

    # Allow Let's Encrypt verification
    location ^~ /.well-known/acme-challenge/ {
        allow all;
        root /var/www/optima/public;
    }

    # Basic security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;

    # Server signature
    server_tokens off;

    # Error and access logs
    error_log /var/log/nginx/{{ ui_subdomain }}_error.log;
    access_log /var/log/nginx/{{ ui_subdomain }}_access.log;
}