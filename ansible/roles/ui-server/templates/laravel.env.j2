# Create: ansible/roles/ui-server/templates/laravel.env.j2
# (This will be used by the configure-ui.yml playbook)

APP_NAME="Optima {{ country_code | upper }} {{ env_name | title }}"
APP_ENV={{ env_name }}
APP_KEY=
APP_DEBUG={{ 'true' if env_name == 'demo' else 'false' }}
APP_URL=https://{{ ui_subdomain }}.{{ domain_base }}

# API Configuration - connects to your .NET API
APP_API=https://{{ api_subdomain }}.{{ domain_base }}/api
APP_IDLE_TIME=15

# Logging Configuration
LOG_CHANNEL=hour
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL={{ 'debug' if env_name == 'demo' else 'info' }}
LOG_AGING=7

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_DOMAIN={{ ui_subdomain }}.{{ domain_base }}

# Cache Configuration
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

# Country/Environment Configuration
COUNTRY_CODE={{ country_code | upper }}
ENVIRONMENT={{ env_name | upper }}

# Security Configuration
SANCTUM_STATEFUL_DOMAINS={{ ui_subdomain }}.{{ domain_base }}

# Application Specific (based on your example)
APP_CUTOFF_HIERARCHY=20241231

# PDF Generation (if you use wkhtmltopdf)
WKHTML_PDF_BINARY='/usr/local/bin/wkhtmltopdf-amd64'

# Google Captcha (use your actual keys)
GCAPTCHA3_SCREET_KEY={{ vault_gcaptcha_key | default('6Lem7GgcAAAAAI6kB7IzCrlOmn0hoZfFvGcI7mzL') }}

# File Storage Configuration
MAX_UPLOAD_SIZE=50M
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

